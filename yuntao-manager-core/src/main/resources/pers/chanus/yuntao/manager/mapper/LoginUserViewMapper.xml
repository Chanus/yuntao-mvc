<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.chanus.yuntao.manager.mapper.LoginUserViewMapper">
  <resultMap id="BaseResultMap" type="pers.chanus.yuntao.manager.model.LoginUserView">
    <result column="login_no" jdbcType="VARCHAR" property="loginNo" />
    <result column="login_name" jdbcType="VARCHAR" property="loginName" />
    <result column="password" jdbcType="CHAR" property="password" />
    <result column="role_id" jdbcType="VARCHAR" property="roleId" />
    <result column="master_no" jdbcType="VARCHAR" property="masterNo" />
    <result column="master_role_id" jdbcType="VARCHAR" property="masterRoleId" />
    <result column="valid_status" jdbcType="CHAR" property="validStatus" />
    <result column="user_type" jdbcType="VARCHAR" property="userType" />
    <result column="head_image" jdbcType="VARCHAR" property="headImage" />
  </resultMap>
  
  <select id="getUser" parameterType="java.lang.String" resultMap="BaseResultMap">
    select login_no, login_name, role_id, master_no, master_role_id, valid_status, user_type, head_image from view_login_user where login_no = #{loginNo,jdbcType=VARCHAR}
  </select>
  
  <select id="login" parameterType="java.lang.String" resultMap="BaseResultMap">
    select login_no, login_name, password, role_id, master_no, master_role_id, valid_status, user_type, head_image from view_login_user where binary login_no = #{loginNo,jdbcType=VARCHAR}
  </select>
  
  <select id="getUserName" parameterType="java.lang.String" resultType="java.lang.String">
    select user_name from view_user where user_name = #{userName,jdbcType=VARCHAR} limit 1
  </select>
  
</mapper>